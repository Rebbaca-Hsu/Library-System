<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.controller.NewbookController">
    <children>
        <VBox layoutX="10.0" prefHeight="300.0" prefWidth="400.0" spacing="15.0">
            <padding>
                <Insets left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <JFXTextField fx:id="idField" focusColor="#0f329a" labelFloat="true" promptText="Book ID" />
                <JFXTextField fx:id="titleField" labelFloat="true" promptText="Book Title" />
                <JFXTextField fx:id="authorField" labelFloat="true" promptText="Author" />
                <JFXTextField fx:id="publisherField" labelFloat="true" promptText="Publisher" />
                <HBox prefHeight="100.0" prefWidth="400.0">
                    <children>
                        <JFXButton fx:id="saveBtn" onAction="#saveBook" prefHeight="90.0" prefWidth="190.0" style="-fx-background-color: #ffff00;" text="Save" />
                        <JFXButton fx:id="cabcelBtn" onAction="#closeWindow" prefHeight="90.0" prefWidth="190.0" style="-fx-background-color: #00ffff;" text="Cancel" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
